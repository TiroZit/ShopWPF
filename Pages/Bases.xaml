     FontFamily="{DynamicResource MaterialDesignFont}">
  <materialDesign:DialogHost>
    <Grid Margin="15">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>
      <ListView x:Name="DGridBases" Grid.Row="0"
  ItemsSource="{Binding Items1}" VerticalAlignment="Top">
        <ListView.View>
          <GridView>
            <GridViewColumn
        DisplayMemberBinding="{Binding basis.name}"
        Header="База" />
            <GridViewColumn 
        DisplayMemberBinding="{Binding product.name}"
        Header="Продукт" />
            <GridViewColumn 
        DisplayMemberBinding="{Binding quantity}"
        Header="Кол-во" />
            <GridViewColumn 
        DisplayMemberBinding="{Binding price}"
        Header="Цена шт." />
          </GridView>
        </ListView.View>
      </ListView>
    </Grid>
